<div class="container " style="height: 100vh">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-md-3"></div>
        <div class="col-md-6"
             style="">
            {{#ifCond query.status "OK"}}
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">{{query.heading}}</h4>
                    <p>{{{query.message}}}</p>
                    <hr>
                    <p class="mb-0 fw-bold">Secret: {{{query.secret}}}</p>
                </div>
            {{/ifCond}}
            {{#ifCond query.status "ERROR"}}
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">{{query.heading}}</h4>
                    <p>{{{query.message}}}</p>
                </div>
            {{/ifCond}}
            {{#ifCond query.status "2FA NEEDED"}}
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">{{query.heading}}</h4>
                    <p>{{{query.message}}}</p>
                </div>
            {{/ifCond}}

            <div class="" style="background: #ffffff; padding: 10px; border-radius: 7px; box-shadow: 0 20px 41px -18px rgba(0,0,0,0.75);">
                <p class="h2 my-2" align="center" style="font-weight: bold; color: #ff3a64">Sign In to Your Account</p>
                <form class="container mb-3" action="/signin" method="post">
                    <div class="form-group mb-2">
                        <label style="color: #2f2f2f; font-weight: bold"
                               for="formGroupExampleInput">Username</label>
                        <input type="text" value="{{{query.username}}}" class="form-control" id="username" placeholder="Username" name="username">
                    </div>
                    <div class="form-group mb-2">
                        <label style="color: #2f2f2f; font-weight: bold"
                               for="formGroupExampleInput">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" name="password">
                    </div>
                    {{#ifCond query.uses2FA "true"}}
                    <div class="form-group mb-2">
                        <label style="color: #2f2f2f; font-weight: bold" for="formGroupExampleInput">Authenticator
                            Code</label>
                        <input type="text" class="form-control" id="authCode"
                               placeholder="Authenticator Code" name="authCode">
                    </div>
                    {{/ifCond}}
                    <button type="submit" class="btn btn-success mt-2">Sign In</button>
                    <p class="mt-2">Don't have an account? <a class="" href="/register">Register Here</a></p>
                </form>





            </div>


        </div>
        <div class="col-md-3"></div>
    </div>
</div>